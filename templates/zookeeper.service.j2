[Unit]
Description=Embedded Zookeeper kafka
After=network.target network-online.target
Wants=network-online.target

[Service]
WorkingDirectory={{kafka_app_home}}
ExecStart={{kafka_app_home}}/bin/zookeeper-server-start.sh {{kafka_app_home}}/config/zookeeper.properties
ExecStop={{kafka_app_home}}/bin/zookeeper-server-stop.sh
Type=simple
User={{kafka_user}}

[Install]
WantedBy=multi-user.target
